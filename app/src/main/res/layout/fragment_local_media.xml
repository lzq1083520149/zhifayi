<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    tools:context="com.hkcect.z12.fragment.LocalMediaFragment">


    <RelativeLayout
        android:id="@+id/relative_photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:background="@color/back_photo_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1px">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/noimage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/translate_text"
                android:gravity="center|left"
                android:padding="3dp"
                android:text="@string/all_picture"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/photo_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="150dp" />

    <RelativeLayout
        android:id="@+id/relative_video"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:background="@color/back_photo_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1px">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/noimage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/translate_text"
                android:gravity="center|left"
                android:padding="3dp"
                android:text="@string/home_all_video"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/video_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
