<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_devices_item"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:scaleType="fitXY"
            android:src="@drawable/devices_item" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_devices_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/imgbtn_devices_item_settings"
                android:layout_width="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/devices_item_settings" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/app_background" />

            <ImageButton
                android:id="@+id/imgbtn_devices_item_down"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@null"
                app:srcCompat="@drawable/devices_item_down" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/app_background" />

            <ImageButton
                android:id="@+id/imgbtn_devices_item_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@null"
                app:srcCompat="@drawable/devices_item_delete" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>